# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=authToken

# Application Configuration
NEXT_PUBLIC_APP_NAME=Nesa ERP
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Modern ERP System for Business Management

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ITEMS_PER_PAGE=10
NEXT_PUBLIC_DATE_FORMAT=yyyy-MM-dd
NEXT_PUBLIC_TIME_FORMAT=HH:mm:ss

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Development
NODE_ENV=development

# Cache Configuration
NEXT_PUBLIC_CACHE_MAX_AGE=3600

# Locale Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# API Timeouts (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Version
NEXT_PUBLIC_APP_VERSION=1.0.0 